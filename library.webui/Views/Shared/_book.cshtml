@model Book

<div class="card mb-2">
    <img class="card-img-top" src="@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">İncele</a>
        <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Güncelle</a>

        <form method="POST" action="/Book/Delete" style="display: inline;">
            <input type="hidden" name="Id" value="@Model.Id">
            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
        </form>
    </div>
</div>